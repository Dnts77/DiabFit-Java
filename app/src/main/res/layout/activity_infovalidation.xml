<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/aqua"
        android:text="Informações!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/poppins"/>

    <ImageView
        android:layout_width="79dp"
        android:layout_height="78dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="259dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/poppins"
        android:text="Insira suas informações abaixo!"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/SugarLevel"
        android:hint="Nível de açúcar no sangue"
        android:inputType="text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nível de Açúcar"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/Peso"
        android:hint="Seu peso (em kg)"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/Altura"
        android:hint="Sua altura (em cm)"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="@color/aqua"
        android:text="Inserir"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:id="@+id/btInserir"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="@color/black"
        android:text="Voltar"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:id="@+id/btVoltar"/>


</LinearLayout>